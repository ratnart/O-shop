  </div>

  <div>
    <%= form.label :name, style: "display: block" ,class: "form-label"%>
    <%= form.text_field :name,class: "form-control" %>
  </div>

  <div class="d-none">
    <%= form.label :password_digest, style: "display: block" ,class: "form-label"%>
    <%= form.text_field :password_digest,class: "form-control" %>
  </div>
   <div>
    <%= form.label :password, style: "display: block" ,class: "form-label"%>
    <%= form.password_field :password ,class: "form-control"%>
  </div>
  <div>
    <%= form.label :user_type, style: "display: block" ,class: "form-label"%>
    <%= form.number_field :user_type,class: "form-control" %>
  </div>

  <div >
    <%= form.submit class: "btn btn-secondary mt-2"%>
  </div>
