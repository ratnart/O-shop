  </div>

  <div>
    <%= form.label :enable, style: "display: block" ,class: "form-label"%>
    <%= form.check_box :enable%>
  </div>
  <div>
    <%= form.label :picture, style: "display: block" ,class: "form-label"%>
    <%= form.file_field :picture ,class: "form-control" %>
  </div>
  <div>
    <%= form.label :isdeleted, style: "display: block" ,class: "form-label"%>
